@namespace AprajitaRetails.AdminLte.Forms
<div class="form-check">
    <input class="form-check-input" type="radio" name="@Name" id="@Name" checked="@Checked" @onchange="@OnValueChanged">
    <label class="form-check-label" for="@Name">
        @Title
    </label>
</div>
@code {

    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Name { get; set; }
    [Parameter] public bool Checked { get; set; } = false;

    [Parameter] public EventCallback<bool> ValueChanged { get; set; }
    private async Task OnValueChanged(ChangeEventArgs e)
    {
        Checked = (bool)e?.Value;
        await ValueChanged.InvokeAsync(Checked);
        if (ValueChanged.HasDelegate)
            ValueChanged.InvokeAsync(Checked);
    }
}
