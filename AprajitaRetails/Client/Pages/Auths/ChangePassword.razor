@page "/change-password"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Authorization
@using AprajitaRetails.Shared.Models.Auth
@inject NavigationManager NavigationManager
@attribute [Authorize]

@inject DataHelper Helper
@inject ClientSetting Setting
@inject NavigationManager NavigationManager
@inject IJSRuntime js
@inject ILayoutManager layoutManager


<!-- note: using styles, not css, we will target Isolated CSS for this component when we upgrade to .NET5 -->
<AprajitaRetails.AdminLte.AOverlay>
    <div style=" margin: 0 auto; margin-top: 10%; max-width: 400px;">
        <div class="login-box bg-success">
            <div class="login-logo">
                <a href="./"><b>@CompanyName</b></a>
            </div>

            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Password Change</p>
                    @*<form action="recover-password.html" method="post">*@
                    <Input @bind-Value="emailInput" />
                    <Input @bind-Value="currentPassword" />
                    <Input @bind-Value="newPassword" />
                    <Input @bind-Value="confirmPassword" />
                    <div class="row">
                        <div class="col-12 mt-4">
                            <Button Color="Color.Primary" OnClick="OnRequestNewPassword">Change password</Button>
                        </div>
                        <div class="col-12 mt-4">
                            <Button Color="Color.Warning" OnClick="CloseWin">Close</Button>
                        </div>
                    </div>
                    @*                    </form>*@
                   @* <p class="mt-3 mb-1">
                        <a href="login">Login</a>
                    </p>
                    <p class="mb-0">
                        <a href="register" class="text-center">Register a new user</a>
                    </p>*@
                </div>

            </div>
        </div>
    </div>
</AprajitaRetails.AdminLte.AOverlay>

@code {
    InputState emailInput = new InputState() { Identifier = "email", Placeholder = "Enter User", Type = "string" };
    InputState currentPassword = new InputState() { Identifier = "current Password", Placeholder = "Enter Current Password", Type = "password" };
    InputState newPassword = new InputState() { Identifier = "pass1", Placeholder = "Enter New Password", Type = "password" };
    InputState confirmPassword = new InputState() { Identifier = "pass2", Placeholder = "Enter Confirm Password", Type = "password" };

    string CompanyName = "Aprajita Retails";
    void CloseWin()
    {
        layoutManager.OverlayMode(false);
        js.InvokeVoidAsync("overlay", false);
        NavigationManager.NavigateTo("/");
    }
    async  void OnRequestNewPassword()
    {
        if (newPassword.Value == confirmPassword.Value)
        {
            NewPassowrd pwd = new NewPassowrd { Id=emailInput.Value, NewPassword=newPassword.Value, Password=currentPassword.Value };
            var result = await Helper.PostOperationsAsync<NewPassowrd>($"api/Auths/changepassword", pwd, "Change Password");
            if (result)
            {
                Helper.Msg("Change Password", "Password is changed successfully");
            }
            else
            {
                Helper.Msg("Change Password", "It failed to change Password!",true);
            }
        }
        else
        {

        }
    }

    protected override async Task OnInitializedAsync()
    {
        emailInput.Value = Setting.UserName;
        StateHasChanged();
    }
}