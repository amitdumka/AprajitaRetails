            </div>
            <div class="form-group">
                <label asp-for="Note.EntryStatus" class="control-label"></label>
                <select asp-for="Note.EntryStatus" class="form-control"></select>
                <span asp-validation-for="Note.EntryStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.UserId" class="control-label"></label>
                <input asp-for="Note.UserId" class="form-control" />
                <span asp-validation-for="Note.UserId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Note.IsReadOnly" /> @Html.DisplayNameFor(model => model.Note.IsReadOnly)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Note.MarkedDeleted" /> @Html.DisplayNameFor(model => model.Note.MarkedDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
