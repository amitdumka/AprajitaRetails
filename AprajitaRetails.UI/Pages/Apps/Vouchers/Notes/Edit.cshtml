            </div>
            <div class="form-group">
                <label asp-for="Note.Reason" class="control-label"></label>
                <input asp-for="Note.Reason" class="form-control" />
                <span asp-validation-for="Note.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Remarks" class="control-label"></label>
                <input asp-for="Note.Remarks" class="form-control" />
                <span asp-validation-for="Note.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.PartyId" class="control-label"></label>
                <select asp-for="Note.PartyId" class="form-control" asp-items="ViewBag.PartyId"></select>
                <span asp-validation-for="Note.PartyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.StoreId" class="control-label"></label>
