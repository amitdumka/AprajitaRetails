    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.NoteNumber" />
            <div class="form-group">
                <label asp-for="Note.NotesType" class="control-label"></label>
                <select asp-for="Note.NotesType" class="form-control"></select>
                <span asp-validation-for="Note.NotesType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.OnDate" class="control-label"></label>
                <input asp-for="Note.OnDate" class="form-control" />
                <span asp-validation-for="Note.OnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.PartyName" class="control-label"></label>
                <input asp-for="Note.PartyName" class="form-control" />
                <span asp-validation-for="Note.PartyName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Note.WithGST" /> @Html.DisplayNameFor(model => model.Note.WithGST)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Note.Amount" class="control-label"></label>
                <input asp-for="Note.Amount" class="form-control" />
                <span asp-validation-for="Note.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.TaxRate" class="control-label"></label>
                <input asp-for="Note.TaxRate" class="form-control" />
