@page "/party"
@model AprajitaRetails.UI.Pages.Apps.Accounts.Parties.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].OpeningDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].ClosingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].OpeningBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].ClosingBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].GSTIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].PANNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].LedgerGroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].Store)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].EntryStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].IsReadOnly)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Party[0].MarkedDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Party) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GSTIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PANNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LedgerGroupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsReadOnly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarkedDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PartyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PartyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PartyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
